---
import Heading from '@compo/Typography/Heading.astro'
import RatingCard from '@compo/blocks/RatingCard.astro'
import Body from '@compo/Typography/Body.astro';
import TwoFace from '@compo/blocks/TwoFace.astro'

const {position, team, playerName, rebounds, points, assists, flip, quote, url} = Astro.props

---
<div class={`lg:flex bg-[url('/images/bg.jpg')] bg-center bg-cover bg-no-repeat ${flip && "flex-row-reverse"}`}>
    <div style={`background-image: url('${url}');`} class="w-[25%] aspect-square bg-center bg-no-repeat bg-cover hidden lg:block xl:w-[35%]">

    </div>
    <div class=" md:pt-16 md:pb-9 xl:px-24 lg:w-[75%]">
        <div class="px-8 md:px-10">
             <div class="flex flex-col items-center md:items-start gap-6 relative pt-4">
            <Heading level="1">Featured player</Heading>

            <Heading level="2" style="md:hidden">{playerName}</Heading>
        

            <div class="hidden md:block">
                <slot />
            </div>
            
            <p class="leading-5 w-[80%] max-w-[600px] text-center md:text-left box relative text-[14px] md:text-[16px]">{quote}</p>

            <div class="flex mt-4 gap-10 md:absolute md:top-[-24px] md:right-8">
                <div>
                    <p class="text-[12px] font-bold text-[#7D7D7D]">Position</p>
                    <p class="text-[16px] font-hand-sofia leading-6 mt-1">{position}</p>
                </div>
            
                <div>
                    <p class="text-[12px] font-bold text-[#7D7D7D]">Team</p>
                    <p class="text-[16px] font-hand-sofia leading-6 mt-1">{team}</p>
                </div>
            </div>
        </div>
        </div>
    
        <p class="text-[#7D7D7D] font-bold hidden md:block mt-12 px-8 md:px-10">Career Regular Season Stats</p>
        <div class="flex justify-around items-center bg-[#333333] md:bg-transparent mt-4 md:justify-start px-8 md:px-10">
            <RatingCard name="Rebounds Per Game" number={rebounds} style="text-white md:text-black"/>
            <div class="h-[30px] w-[1px] bg-white  md:hidden"></div>
            <RatingCard name="Points Per Game" number={points} style="text-white md:text-black"/>
            <div class="h-[30px] w-[0.5px] bg-white md:hidden"></div>
            <RatingCard name="Assists Per Game" number={assists} style="text-white md:text-black"/>

            <TwoFace style={`transform rotate-[90deg] hover:cursor-pointer right-0 hidden md:block`} ratio='square' width="50px" url1="/images/icons/icon-arrow-b.svg" url2="/images/icons/icon-arrow-c.svg"/>
        </div>

        
    </div>
</div>


<style>
    .box::after{
        content: '';
        position: absolute;
        display: inline-block;
        width: 50px;
        height: 50px;
        background: no-repeat center url('/images/icons/icon-quote.svg');
        right: -35px;
        top: -25px;
        -webkit-transform: scaleX(-1);
        transform: scaleX(-1);
    }
    .box::before{
        content: '';
        position: absolute;
        display: inline-block;
        width: 50px;
        height: 50px;
        left: -35px;
        top: -25px;
        background: no-repeat center url('/images/icons/icon-quote.svg');

    }
</style>
