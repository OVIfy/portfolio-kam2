---
import Section from "@compo/Section.astro";
import Heading from "@compo/typography/Heading.astro";
---
<Section style="relative">
    <div class="border-y-[1px] border-white border-opacity-30 absolute top-0 bottom-0 right-4 left-4 md:right-5 md:left-5 lg:right-20 lg:left-20">
    </div>
    <Heading Level="h2">Tools</Heading>
    <p class="tracking-[5px] mt-[24px]">WE SHAPE OUR TOOLS TO SHAPE US</p>

    <div class="flex gap-[20px] md:gap-[104px] mt-[48px]">
        <img src="/images/headphones/tools/1.svg" alt="cinema 4D logo">
        <img src="/images/headphones/tools/2.svg" alt="maya logo">
        <img src="/images/headphones/tools/3.svg" alt="photoshop logo">
    </div>
</Section>