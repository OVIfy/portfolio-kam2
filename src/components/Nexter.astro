---
export interface Props{
    leftText? : string,
    leftUrl? : string,
    rightText? : string,
    rightUrl? : string
}


const {leftText, leftUrl, rightText, rightUrl} = Astro.props
---
<div class="pt-6 pl-4 pr-4 md:pt-8 md:pr-8 md:pl-18 lg:mt-20  lg:pt-[63px] lg:pr-36 lg:pl-36">
        {rightText && leftText && <div class="flex justify-between  ">
            {rightText && <a href={rightUrl}><div class="flex items-center gap-1">
                <img class="w-[40px] inline-block rotate-180" src="/images/icons/arrow.svg" alt="Next icon">
                <p class="font-bold">{rightText}</p>
            </div></a>}

            {leftText && <a href={leftUrl}><div class="flex items-center justify-end gap-1">
                <p class="font-bold">{leftText}</p>
                <img class="w-[40px] inline-block" src="/images/icons/arrow.svg" alt="Next icon">
            </div></a>}
        </div>}
       
        {leftText && !rightText &&
            <div class="flex">
                <a href={leftUrl}><div class="flex items-center gap-1">
                    <img class="w-[40px] inline-block rotate-180" src="/images/icons/arrow.svg" alt="Next icon">
                    <p class="font-bold">{leftText}</p>
                </div></a>
            </div>
        }

        {rightText && !leftText &&
            <div class="flex justify-end">
                <a href={rightUrl}><div class="flex items-center gap-1">
                    <p class="font-bold">{rightText}</p>
                    <img class="w-[40px] inline-block" src="/images/icons/arrow.svg" alt="Next icon">
                </div></a>
            </div>
        }
</div>