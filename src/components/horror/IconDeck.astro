---
interface Props{
    urls : Array<string>,
    width? : string
    children? : string
    contStyle? : string
    iconStyle?  : string
    links? : string[]
}

import { twMerge } from 'tailwind-merge';
const {urls, width, contStyle, iconStyle, links = []} = Astro.props
---

<div class={twMerge("bg-primary-color inline-flex flex-col gap-12 p-6", contStyle)}>
    {urls && urls.map((url, i:any) => 
        <a href={links[i] || '#'}><img tabindex="0" width={width? width : "24px"} class={twMerge("mouse-change icon-to-red", iconStyle)} src={url}/></a>
    )}
    <slot/>
</div>
<style>
  .icon-to-red{
  }
.icon-to-red:hover{
  filter: brightness(0) invert(34%) sepia(60%) saturate(3762%) hue-rotate(343deg) brightness(91%) contrast(97%);
}
</style>