<script>
    import { gsap } from "gsap";
    import { ScrollToPlugin } from "gsap/ScrollToPlugin";

    gsap.registerPlugin(ScrollToPlugin);

    const uiDesignScrollBar = document.querySelector('.con')
    
    setTimeout(()=>{
    }, 3000)

    const test = document.querySelector('.test') as HTMLElement

    class SliderItem extends HTMLElement{
        // slider : HTMLElement
        constructor(){
            super()
            this.tabIndex = 0
            this.onfocus = ()=>{
                if(uiDesignScrollBar)
                gsap.to(uiDesignScrollBar, {duration : 1, scrollTo :{x : this, autoKill : true, offsetX : (uiDesignScrollBar?.clientWidth - this.clientWidth)/2}})
            }
        }
    }

    customElements.define('slider-item',SliderItem)
</script>

